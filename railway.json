{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.chainlit"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd /app/chainlit_app && chainlit run app.py --host 0.0.0.0 --port ${PORT:-8000}",
    "healthcheckPath": "/",
    "healthcheckTimeout": 60,
    "sleepApplication": false,
    "sleepDelay": 10,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "region": "europe-west4"
  },
  "environments": {
    "production": {
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile.chainlit"
      },
      "deploy": {
        "numReplicas": 1,
        "sleepApplication": true,
        "sleepDelay": 10
      }
    }
  }
}