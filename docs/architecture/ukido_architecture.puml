System_Ext(claude, "Claude 3.5 Haiku", "Генерация ответов")

Rel(parent, ukido_ai, "Отправляет вопросы", "HTTPS")
Rel(ukido_ai, openrouter, "Запросы к LLM", "HTTPS/API")
Rel(openrouter, gemini, "Роутинг")
Rel(openrouter, claude, "Генерация")

@enduml